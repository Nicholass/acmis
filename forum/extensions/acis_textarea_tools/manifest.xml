<extension engine="1.0">
    <id>acis_textarea_tools</id>
    <title>ACIS Tools</title>
    <version>1.5</version>
    <description>This extension adds a resizer to the textarea, CTRL+ENTER submit key, scroll for large images, announcement folding</description>
    <author>Ghost</author>
    <minversion>1.3.4</minversion>
    <maxtestedon>1.3.6</maxtestedon>

	<dependencies>
		<dependency>jquery</dependency>
	</dependencies>
	
    <hooks>
		<hook id="hd_head"><![CDATA[
			
			define('JQUERY', true);
			$forum_head['resizer'] = '<script type="text/javascript" src="'.$ext_info['url'].'/jquery.textareatools.js"></script>';				

		]]></hook>
    </hooks>
</extension>
